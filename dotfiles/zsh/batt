#!/usr/bin/env zsh

function batt_icon() {
  # Get the battery percentage
  battery_percent=$(pmset -g batt | grep -Eo "\d+%" | cut -d% -f1)

  # Set the battery icon based on the percentage
  case "$battery_percent" in
    10|20|30|40)
      echo "ðŸ”‹âšªâšªâšªâšª"
      ;;
    20|30|40)
      echo "ðŸ”‹ðŸ”‹âšªâšªâšª"
      ;;
    30|40)
      echo "ðŸ”‹ðŸ”‹ðŸ”‹âšªâšª"
      ;;
    40|*)
      echo "ðŸ”‹ðŸ”‹ðŸ”‹ðŸ”‹âšª"
      ;;
  esac
}

