#!/usr/bin/env zsh

function batt_lvl() {
  # Get the battery percentage
  battery_percent=$(pmset -g batt | grep -Eo "\d+%" | cut -d% -f1)

  # Set the icon based on the percentage
  case $battery_percent in
    0-10) ICON="ï•¹";;
    11-20) ICON="ï•º";;
    21-30) ICON="ï•»";;
    31-40) ICON="ï•¼";;
    41-50) ICON="ï•½";;
    51-60) ICON="ï•¾";;
    61-70) ICON="ï•¿";;
    71-80) ICON="ï–€";;
    81-90) ICON="ï–";;
    91-100) ICON="ï•¸";;
esac

  # Print the battery status
  echo "$icon $battery_percent%"
}

